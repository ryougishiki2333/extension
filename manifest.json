{
  "manifest_version": 3,
  "name": "QuestLog: Fantasy Todo",
  "version": "1.0",
  "description": "A minimalist, fantasy-themed fixed todolist for focused browsing.",
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["style.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
